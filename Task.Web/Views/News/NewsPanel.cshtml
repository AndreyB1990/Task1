@using Task.DALModels
@model IEnumerable<News>     
<script src="@Url.Content("~/Scripts/SweetPager/sweet-pager.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/SweetPager/sweet-pager-functions.js")" type="text/javascript"></script>

<input id="news-panel-info" type="hidden" data-info='{ "UserIsAdmin": "@ViewBag.userIsAdmin", "Url": "/News/LatestNews", 
"TemplatePath": "@Url.Content("~/JQueryTemplates/News/NewsPanelItemsTemplate.htm")" }'/>

<script type="text/javascript" src="/Scripts/convert-json-date.js"></script>
<script src="@Url.Content("~/Scripts/jQueryTemplateConfigs/news-panel-items.js")" type="text/javascript"></script>

<h2>
    News</h2>
@if (ViewBag.userIsAdmin)
{
    <div class="text-center">
        @Html.ActionLink("Create News", "Create", "News")
    </div>
}
<div id="news-main">
    <ul id="news-list">
        <a href="@Url.Action("Index", "News")" id="view-all-news">View all news</a>
    </ul>
</div>
