@model Task.DALModels.Girl
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm("Edit", "Girls"))
{
    <div class="text-center">
        @Html.ValidationSummary(true)
        <h1>
            Edit Girl</h1>
    </div>
    @Html.EditorForModel()
    <div class="text-center">
        <input type="submit" class="button" value="Edit" />
        <input type="button" id="girls-button-cancel" class="button" value="Cancel" />
    </div>
}