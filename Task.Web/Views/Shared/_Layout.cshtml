@using Task.Infrastructure
@using Task.Infrastructure.Ninject
@using Task.Services.Interfaces
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <input id="global-info" type="hidden" data-info='{"LinksPerPage": "@Constants.PAGER_NUMBER_OF_VISIBLE_LINKS"}' />

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/tipsy.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/nanoscroller.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.numeric.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.hooks.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tipsy.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.nanoscroller.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/string.format.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/paging.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Pager/doPager.js")" type="text/javascript"></script>
</head>
<body>
    <div class="nano">
        <div class="content">
            <div id="header">
                @Html.Action("AccountPanel", "Account")
            </div>
            @if (Locator.GetService<IRoleService>().IsUserInRole(User.Identity.Name, Constants.ROLE_ADMIN))
            {
                <div id="menu-admin">
                    @Html.Partial("_Menu")
                </div>
            }
            else
            {
                <div id="menu">
                    <div class="nano">
                        <div class="content">
                            @Html.Partial("_Menu")
                        </div>
                    </div>
                </div>
            }
            <div id="container">
                <div id="main">
                    <div id="content-container">
                        @RenderSection("News", false)
                        <div id="about" class="nano">
                            <div id="content" class="content">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                    <div id="company-details-wrapper">
                        <div id="company-details">
                            <div id="logo">
                                <a href="http://www.epam.com" target="_blank">
                                    <img src="@Url.Content("~/Content/images/epam.png")" alt="epam"/>
                                </a>
                            </div>
                            <p>
                                © 1993-2012. EPAM Systems. All Rights Reserved.</p>
                            <p>
                                Minsk office, Nezavisimosti, 186, Belarus, Office phone: +375 (17) 210-1662</p>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_Footer")
            <div id="hidden-login" class="display-none">
                <div id="bg-site">
                </div>
                @Html.Action("LogOnPartial", "Account")
            </div>
        </div>
    </div>
</body>
</html>
